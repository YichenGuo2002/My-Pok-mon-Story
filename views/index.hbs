{{#section 'head'}}
    <title>Home - My Pokémon Story</title>
    <link rel="stylesheet" href="../public/css/index.css">
{{/section}}

<div id = "title" style = "background: linear-gradient(to top, white,aliceblue);">
    <h3>My Story<br/>
        Starts Here...</h3>
    <!---->
</div>
<figure></figure>
<div id = "subtitle" align = "left">
    <p>Calling All Pokémon Fans! Click to Enter Your Ultimate Pokémon Universe:</p>
    <button id = "homeButton">Get Started</button>
    </div>
<div id = "blocks">
    <div id = "blocksTitle"><h3>Aim to Be a<br/>
    Pokémon Master!</h3></div>
    <div id = "subblocks">
        <div>
            <hr>
            <h2>Your own Pokémon:</h2>
            <p><b>Design</b>, <b>like</b>, and <b>comment</b> your favorite&#128151; Pokémon.<br/> Shout out to your friends: I DIYed this!</p> 
        </div>
        <div>
            <hr>
            <h2>Your own collection:</h2>
            <p>Keep track of your Pokémon journey in the <b>lists you create&#x1F4D7;</b>.<br/> Keep your most memorable memories!</p> 
        </div>
        <div>
            <hr>
            <h2>Your own community:</h2>
            <p>Make your list public to <b>make some friends&#x1F44B;</b> with the same Pokémon taste.<br/> Get connected because we are all Pokémon nerds!</p> 
        </div>
    </div>
</div>
<hr style = "padding:0; margin:0; color:rgba(56,106,187,1);"/>
<div style = "height:200px; background-color:rgba(84, 185, 241, 0.9);"></div>
<div id = "login" style = "height: calc(100vh);">
    <div id = "subLogin">
        <h3>New to This?</h3>
        <p>First-time travelers, you are more than welcome! Start building up your list today to gain the most experience from My Pokémon Story.</p>
        <button id = "registerButton">Sign Up</button>
    </div>
    <img id = "loginPicture" src = "../public/image/Artboard 1.png" style = "max-height:50%; position:relative; top: 250px; left: 350px;">
</div>
<div id = "friend" style = "height: calc(150vh);">
    <div id = "subFriend">
        <h3>Feeling Alone?</h3>
        <p>Come connect with Pokémon lovers from all around the world! We share and comment on each other's Pokémon collection. This is so much fun!</p>
        <button id = "friendButton">Sign Up</button>
        <img id = "friendPicture" src = "../public/image/Artboard 2.png" style = "max-height:75vh; position:relative; bottom:710px; right: 250px;">
    </div>
</div>
<div style = "width:100%; height:max-content;">
    <iframe 
    style = "width:100vw; height: calc(100vw * 0.5625);"
    src="https://www.youtube-nocookie.com/embed/ycNtbNFXAso" 
    title="YouTube video player" 
    frameborder="0" 
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
    allowfullscreen>
    </iframe>
</div>
<hr style = "padding:0; margin:0; color:rgba(56,106,187,1);"/>
<div id = "email">
    <form onsubmit="event.preventDefault();" id = "subEmail" align = "center">
        <h3>Get Updated!</h3>
        <p id = "subscribeMessage"></p>
        <input type = "text" name = "subscribeName" id = "nameInput" placeholder = "First Name*" required>
        <input type = "text" name = "subscribeEmail" id = "subscribeInput" placeholder = "Email Account*" required>
        <p>By providing this information, you are opting to receive emails from  My Pokémon Story with news, 
        special offers, promotions and messages tailored to your interests, and you agree to the My Pokémon Story
         privacy policy and terms of use.<br>
        Fields marked with an asterisk (*) are required.</p>
        <input id = "subscribeButton" type = "submit" value = "SUBMIT">
    </form>
</div>

{{#section 'footer'}}
    <script src="../public/js/index.js"></script>

    <script type="text/javascript"
        src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js">
    </script>

   <script type="text/javascript">
        (function() {
        emailjs.init('{{user_ID}}');
        })();
        const subscribeButton = document.getElementById('subscribeButton');
        subscribeButton.onclick = () =>{
            let templateParams = {
                message: 'You have successfully registered our weekly newsletter!',
                firstName:document.getElementById('nameInput').value,
                email:document.getElementById('subscribeInput').value
            }
            emailjs.send('{{service_ID}}', '{{template_ID}}', templateParams)
            .then(() =>{
                document.getElementById('nameInput').value = "";
                document.getElementById('subscribeInput').value = "";
                document.getElementById('subscribeMessage').innerText = "Successfully Subscribed!";
                document.getElementById('subscribeMessage').style.color = "green";
            }, (err) =>{
                document.getElementById('nameInput').value = "";
                document.getElementById('subscribeInput').value = "";
                document.getElementById('subscribeMessage').innerText = "Subscription Failed. Try enter valid name/email!";
                document.getElementById('subscribeMessage').style.color = "red";
                console.log(err);
            });
        }
    </script>
{{/section}}